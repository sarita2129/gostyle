<% if !@works.nil? && @works.any? %>
<!-- <ul> -->

<% @works.each do |work| %>
<div class="workdiv">
    <div class="img-with-text" style="">
       <div class="workimg" style="background:url(<%= work.image %>);background-size:cover;">

       </div>
    </div>
    <div style="display:block;position:absolute;text-align:center;bottom:0;width: 100%;height: 2rem;">
      <% if work.title.chars.length > 20 %>
        <% @title = "#{work.title[0..17]}..." %>
      <% else %>
        <% @title = work.title %>
      <% end %>
      <p class="wrapword"><%= link_to @title, work_path(work.id)  %></p>
    </div>
</div>
<% end %>
<!-- </ul> -->
<% end %>

  <div class="row">
  <div class="col-6 offset-md-4">
  <% if flash[:error_message].present? %>
    <p><%= flash[:error_message] %></p>
  <% end %>

  <% if @work.persisted? %>
   <% @visit = @work.visit else @visit = 0 %>
  <% end %>


  <%= form_for @work do |f| %>
    <div class="form-group">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, :required => true, :autofocus => true ,:class => "form-control txt" %>
    </div>
    <div class="form-group">
      <%= f.label :image, "Upload Image" %>
      <%= f.text_field :image, :class => "form-control txt" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "description" %>
      <%= f.text_area :description, :class => "form-control txtarea", :rows => 3 %>
    </div>
      <%= f.hidden_field :visit, :value => @visit %>
      <%= f.submit "Save", :class => "btn btn-primary m-b10" %>

  <% end %>
</div>
</div>

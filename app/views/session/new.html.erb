<h1>Sign In</h1>

<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil , :class => "form-control txt" %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => "form-control txt" %>
  </div>
  <%= submit_tag "Sign in",  :class => "btn btn-primary" %>
<% end %>


<div class="form-group">
  <% if flash[:error_message].present? %>
    <p><%= flash[:error_message] %></p>
  <% end %>
</div>

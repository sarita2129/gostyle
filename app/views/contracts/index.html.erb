<div >
<h2>
  Contracts <% if @current_user.admin == "Buyer" %><%= "Generated by Me" %><% else %><%= "Assigned to Me" %> <% end %>
</h2>

<% if @current_user.admin == "Buyer" %>
<%= link_to "Create Contract", new_contract_path,:class => "btn btn-primary"  %>
<% end %>
<table>
  <th>Description</th><th>Created By</th><th>Designer Name</th><th>Designer Contact No</th><th>From</th><th>To</th><th>Status</th><th>Amount</th>
  <% @contracts.each do |contract| %>
  <tr>
  <td>
  <%= link_to contract.description, contract %>
  </td>
  <td>
    <%= contract.buyer.name %>
  </td>
  <td>
    <%= contract.seller.name %>
  </td>
  <td>
    <%= number_to_phone contract.seller.phone %>
  </td>
  <td>
    <%= contract.contract_from.strftime('%e %B, %Y') if contract.contract_from.present? %>
  </td>
  <td>
    <%= contract.contract_to.strftime('%e %B, %Y') if contract.contract_to.present? %>
  </td>
  <td>
    <%= contract.status %>
  </td>
  <td>
    <%= number_to_currency contract.amount %>
  </td>
  <% end %>
</tr>
</table>
</div>
